extends ../layout

block content
  h1.mb-4 Create New Blog Post
  
  form(action="/blog" method="POST")
    .mb-3
      label.form-label(for="title") Title
      input#title.form-control(type="text" name="title" required)
    
    .mb-3
      label.form-label(for="location") Location
      input#location.form-control(type="text" name="location" required)
    
    .mb-3
      label.form-label(for="content") Content
      textarea#content.form-control(name="content" rows="6" required)
    
    .mb-3
      label.form-label(for="imageUrl") Image URL
      input#imageUrl.form-control(type="url" name="imageUrl")
    
    .mb-3
      label.form-label(for="author") Author
      input#author.form-control(type="text" name="author" required)
    
    .mb-3
      label.form-label(for="tags") Tags (comma-separated)
      input#tags.form-control(type="text" name="tags" placeholder="travel, adventure, nature")
    
    .d-grid.gap-2.d-md-flex
      button.btn.btn-primary(type="submit") Create Post
      a.btn.btn-outline-secondary(href="/blog") Cancel
