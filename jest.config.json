{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "roots": ["<rootDir>/tests"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": ".*\\.test\\.ts$",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
}
